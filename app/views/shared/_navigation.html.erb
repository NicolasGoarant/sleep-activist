<nav class="navbar" id="main-navbar">
  <a href="<%= root_path %>" class="logo">
    <div class="logo-icon">
      <%= image_tag 'logo.jpg', alt: 'Sleep Activists' %>
    </div>
    <span>Sleep Activists</span>
  </a>

  <!-- Navigation desktop -->
  <ul class="nav-links desktop-nav">
    <li><%= link_to "Nos principes", principes_path %></li>
    <li><%= link_to "Contenus", root_path(anchor: "contenus") %></li>
    <li><%= link_to "Presse", presse_path %></li>
    <li><%= link_to "Equipe", equipe_path %></li>
  </ul>

  <!-- Burger menu pour mobile -->
  <button class="burger-menu" id="burgerBtn" aria-label="Menu">
    <span></span>
    <span></span>
    <span></span>
  </button>
</nav>

<!-- Menu mobile -->
<div class="mobile-menu" id="mobileMenu">
  <ul>
    <li><%= link_to "Nos principes", principes_path %></li>
    <li><%= link_to "Contenus", root_path(anchor: "contenus") %></li>
    <li><%= link_to "Presse", presse_path %></li>
    <li><%= link_to "Equipe", equipe_path %></li>
  </ul>
</div>

<style>
/* Protection body pour la navbar */
body {
  margin: 0;
}

/* Navbar base - FIXE en permanence */
.navbar {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  width: 100% !important;
  height: 80px; /* On définit une hauteur fixe */
  z-index: 9999 !important; /* Pour être sûr qu'elle passe au-dessus de tout */
  background: var(--deep-navy); /* Assure-toi qu'elle n'est pas transparente */
  display: flex;
  align-items: center;
  padding: 0 5%;
  border-bottom: 1px solid rgba(184, 181, 232, 0.1);
}

/* Desktop navigation */
.desktop-nav {
  display: flex;
  gap: 2rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.desktop-nav li a {
  color: var(--soft-lavender);
  text-decoration: none;
  font-size: 1rem;
  transition: color 0.3s;
}

.desktop-nav li a:hover {
  color: var(--moon-yellow);
}

/* Burger menu simple - caché sur desktop */
.burger-menu {
  display: none;
  flex-direction: column;
  gap: 6px;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 10px;
  z-index: 1001;
  position: relative;
}

.burger-menu span {
  width: 28px;
  height: 3px;
  background: var(--moon-yellow);
  border-radius: 3px;
  transition: all 0.3s ease;
}

/* Animation simple du burger vers X */
.burger-menu.active span:nth-child(1) {
  transform: rotate(45deg) translate(9px, 9px);
}

.burger-menu.active span:nth-child(2) {
  opacity: 0;
  transform: scale(0);
}

.burger-menu.active span:nth-child(3) {
  transform: rotate(-45deg) translate(8px, -8px);
}

/* Menu mobile */
.mobile-menu {
  position: fixed;
  top: 70px;
  right: -100%;
  width: 80%;
  max-width: 300px;
  height: calc(100vh - 70px);
  background: var(--deep-navy);
  border-left: 1px solid rgba(184, 181, 232, 0.2);
  transition: right 0.3s ease;
  z-index: 999;
  overflow-y: auto;
}

.mobile-menu.active {
  right: 0;
}

.mobile-menu ul {
  list-style: none;
  padding: 2rem 0;
  margin: 0;
}

.mobile-menu ul li {
  padding: 0;
}

.mobile-menu ul li a {
  display: block;
  padding: 1.5rem 2rem;
  color: var(--soft-lavender);
  text-decoration: none;
  font-size: 1.1rem;
  border-bottom: 1px solid rgba(184, 181, 232, 0.1);
  transition: all 0.3s;
}

.mobile-menu ul li a:hover {
  background: rgba(255, 217, 61, 0.1);
  color: var(--moon-yellow);
  padding-left: 2.5rem;
}

/* Responsive */
@media (max-width: 768px) {
  .desktop-nav {
    display: none;
  }

  .burger-menu {
    display: flex;
  }

  .navbar {
    padding: 0 4%;
  }
}
</style>

<script>
(function() {
  const burger = document.getElementById('burgerBtn');
  const mobileMenu = document.getElementById('mobileMenu');

  if (!burger || !mobileMenu) return;

  burger.addEventListener('click', () => {
    burger.classList.toggle('active');
    mobileMenu.classList.toggle('active');
  });

  // Fermer le menu en cliquant sur un lien
  mobileMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      burger.classList.remove('active');
      mobileMenu.classList.remove('active');
    });
  });

  // Fermer le menu en cliquant ailleurs
  document.addEventListener('click', (e) => {
    if (!burger.contains(e.target) && !mobileMenu.contains(e.target)) {
      burger.classList.remove('active');
      mobileMenu.classList.remove('active');
    }
  });
})();
</script>
