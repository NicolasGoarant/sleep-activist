<script>
(function() {
  const sheep = document.getElementById('sleepSheep');
  if (!sheep) return;

  const isMobile = window.innerWidth <= 768;
  let isVisible = false;

  // Apparition initiale
  setTimeout(() => {
    sheep.classList.add('sheep-appear');
    isVisible = true;

    // Sur mobile, gambade puis dispara√Æt apr√®s 4 secondes
    if (isMobile) {
      setTimeout(() => {
        sheep.classList.add('sheep-walking-mobile');
        setTimeout(() => hideSheep(), 2000);
      }, 2000);
    } else {
      // Sur desktop, marche de temps en temps
      scheduleRandomWalk();
    }
  }, 1000);

  // Fonction pour faire marcher le mouton de temps en temps
function scheduleRandomWalk() {
  if (!isVisible) return;
  const walkDelay = 5000 + Math.random() * 10000;

  setTimeout(() => {
    if (isVisible) {
      // 1. On fait sauter TOUT le conteneur (mouton + zzz)
      sheep.classList.add('sheep-moving');

      // 2. On calcule la nouvelle position horizontale
      // On change le 'left' ou 'right' du conteneur entier
      const currentLeft = sheep.offsetLeft;
      const moveX = (Math.random() - 0.5) * 200;
      sheep.style.left = (currentLeft + moveX) + 'px';

      // 3. On arr√™te de gambader apr√®s la fin du mouvement
      setTimeout(() => {
        sheep.classList.remove('sheep-moving');
        scheduleRandomWalk();
      }, 2000);
    }
  }, walkDelay);
}

  // Fonction pour faire dispara√Ætre le mouton
  function hideSheep() {
    sheep.style.animation = 'sheep-goodbye 1s forwards';
    isVisible = false;
    setTimeout(() => {
      sheep.style.display = 'none';
      // R√©apparition al√©atoire
      scheduleReappear();
    }, 1000);
  }

  // Fonction pour r√©appara√Ætre √† un endroit al√©atoire
  function reappearSheep() {
    if (isVisible) return;

    const positions = isMobile
      ? [{bottom: '10px', right: '10px'}, {bottom: '10px', left: '10px'}]
      : [
          {bottom: '0px', right: '30px'},
          {bottom: '0px', left: '30px'},
          {top: '80px', right: '30px'},
          {bottom: '50%', right: '30px'}
        ];

    const pos = positions[Math.floor(Math.random() * positions.length)];

    sheep.style.bottom = pos.bottom || 'auto';
    sheep.style.top = pos.top || 'auto';
    sheep.style.right = pos.right || 'auto';
    sheep.style.left = pos.left || 'auto';
    sheep.style.display = 'block';
    sheep.style.animation = 'none';

    setTimeout(() => {
      sheep.classList.add('sheep-appear');
      isVisible = true;

      if (isMobile) {
        setTimeout(() => hideSheep(), 4000);
      } else {
        sheep.classList.add('sheep-moving');
      }
    }, 100);
  }

  // Programmer une r√©apparition al√©atoire
  function scheduleReappear() {
    const delay = isMobile
      ? 15000 + Math.random() * 20000  // 15-35 sec sur mobile
      : 10000 + Math.random() * 15000; // 10-25 sec sur desktop

    setTimeout(() => reappearSheep(), delay);
  }

  // Clic pour faire dispara√Ætre
  sheep.addEventListener('click', () => {
    if (isVisible) hideSheep();
  });

  // Sur desktop, disparition/r√©apparition automatique
  if (!isMobile) {
    setInterval(() => {
      if (isVisible && Math.random() > 0.7) {
        hideSheep();
      }
    }, 20000);
  }
})();
</script>

